{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules, **/*.test.*", "src/__tests__", "src/__fixtures__/"]
}
